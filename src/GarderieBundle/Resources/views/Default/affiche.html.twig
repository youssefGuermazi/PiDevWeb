
{% extends '@Club/Default/layoutBack.html.twig' %}


{% block body %}
<strong>Recherche</strong>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
<script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
<input id="myInput" type="text">
<th class="numeri"></th>
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Garderies</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-angle-right"></i>Liste des garderies</h4>
                    <section id="unseen">
                        <table id="myTable" class="table table-bordered table-striped table-condensed">
                            <thead>
                            <tr>
                                <th class="numeric">num√©ro garderie</th>
                                <th class="numeric">nom</th>
                                <th class="numeric">adresse</th>
                                <th class="numeric">telephone</th>
                                <th class="numeric">supprimer</th>
                                <th class="numeric">modifier</th>
                                <th class="numeric">image</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for g in Garderie %}


                                <td >{{ g.numGard }}</td>
                                <td>{{g.nom}}</td>
                                <td>{{ g.adresse }}</td>
                                <td>{{ g.telephone }}</td>
                                <td> <a href="{{ path('garderie_del',{'id':g.numGard}) }}">Supprimer</a></td>
                                <td> <a href="{{ path('garderie_Update',{'id':g.numGard}) }}">Modifier</a></td>
                                <td><img src="{{ asset('uploads/'~ g.image) }}" width="150" height="150"></td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-lg-4 -->
        </div>

        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
        {% endblock %}


