{% extends '@Club/Default/layoutBack.html.twig' %}
{% block body %}
    <strong>Recherche</strong>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
    <input id="myInput" type="text">
    <section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Formations</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-angle-right"></i>Liste des formations</h4>
                    <section id="unseen">
                        <table id="myTable" class="table table-bordered table-striped table-condensed">
                            <thead>
                            <tr>
                                <th class="numeric">Titre</th>
                                <th class="numeric">Date Debut</th>
                                <th class="numeric">Date Fin</th>
                                <th class="numeric">Description</th>
                                <th class="numeric">supprimer</th>
                                <th class="numeric">modifier</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for a in formation %}
                  <tr>

                                <td>{{ a.titre}}</td>
                                <td>{{ a.dated}}</td>
                                <td>{{ a.datef}}</td>
                                <td>{{ a.description}}</td>
                                <td><a href="{{ path('Formaton_Suprime',{'id':a.id}) }}"
                                        class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>supprimer</a><br><br></td>
                                <td><a href="{{ path('Formateur_Modifier',{'id':a.id}) }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>Modifier</a><br><br>
                                    </a> </td>
                  </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-lg-4 -->
        </div>

        <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}