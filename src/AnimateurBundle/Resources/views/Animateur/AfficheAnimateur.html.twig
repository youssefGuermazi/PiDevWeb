{% extends '@Club/Default/layoutBack.html.twig' %}
{% block body %}
<strong>Recherche</strong>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
<script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
<input id="myInput" type="text">
<section id="main-content">
<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Animateurs</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="content-panel">
                <h4><i class="fa fa-angle-right"></i>Liste des Animateurs</h4>
                <section id="unseen">
                    <table id="myTable" class="table table-bordered table-striped table-condensed">
                        <thead>
                        <tr>
                            <th class="numeric">Cin</th>
                            <th class="numeric">Nom</th>
                            <th class="numeric">Prenom</th>
                            <th class="numeric">Activite</th>
                            <th class="numeric">Image</th>
                            <th class="numeric">Supprimer</th>
                            <th class="numeric">Fomrations & Informations</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for a in animateur %}
                        <tr>

                               <td>{{ a.cin}}</td>
                                <td>{{ a.nom}}</td>
                                <td>{{ a.prenom}}</td>
                                <td>{{ a.activiter}}</td>
                                <td> <img src="{{ asset('Upload/')}}{{ a.nomfile }}" width="100" class="img-circle" /></td>
                                <td><a href="{{ path('Suprimer_Animateur',{'id':a.cin}) }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>Supprimer</a><br><br>
                                 </td>
                                <td><a href="{{ path('details_Animateur',{'id':a.cin}) }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>Formations</a><br><br>
                                  :</td>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </section>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-lg-4 -->
    </div>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
