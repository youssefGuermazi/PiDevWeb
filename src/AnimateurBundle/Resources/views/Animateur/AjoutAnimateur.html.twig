    <h3><i class="fa fa-angle-right"></i> Ajouter Animateur</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="row mt">
                <div class="form-panel">
                    <div class="form">
                        {{form_start (form)}}
                        <div class="form-group ">

                            <label for="cin" class="control-label col-lg-2">CIN:</label>
                            {{form_widget (form.cin, {'attr': {'class': 'form-control'}})}}<br>

                        </div>
                        <div class="form-group ">
                            <label for="nom" class="control-label col-lg-2">Nom:</label>

                            {{form_widget (form.nom, {'attr': {'class': 'form-control'}})}} <br>
                        </div>
                        <div class="form-group ">
                            <label for="prenom" class="control-label col-lg-2">Prenom:</label>

                            {{form_widget (form.prenom, {'attr': {'class': 'form-control'}})}}<br>
                        </div>
                        <div class="form-group ">
                            <label for="activiter" class="control-label col-lg-2">Activit√©:</label>

                            {{form_widget (form.activiter, {'attr': {'class': 'form-control'}})}}<br>
                        </div>
                        <div class="form-group ">
                            <label for="image" class="control-label col-lg-2">Image:</label>

                            {{form_widget (form.file, {'attr': {'class': 'form-control'}})}}<br>
                        </div>
                        <div class="form-group">

                            <input type="submit" value="Envoyer" class="btn btn-success"/>
                        </div>

                        {{form_end (form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

