{% extends '@Club/Default/layoutBack.html.twig' %}


{% block body %}
    <strong>Recherche</strong>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
<input id="myInput" type="text">
    <th class="numeri"></th>
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> CLUBS</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="content-panel">
                        <h4><i class="fa fa-angle-right"></i>Liste des clubs</h4>
                        <section id="unseen">
                            <table id="myTable" class="table table-bordered table-striped table-condensed">
                                <thead>
                                <tr>
                                    <th class="numeric">nom</th>
                                    <th class="numeric">Date description</th>
                                    <th class="numeric">Date creation</th>
                                    <th class="numeric">supprimer</th>
                                    <th class="numeric">modifier</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for c in club %}


                                        <td >{{ c.nom }} </td>
                                        <td>{{ c.description }}</td>
                                        <td>{{ c.dateCreation|date("m/d/Y") }}</td>
                                        <td> <a href="{{ path('suppclub',{'nom':c.nom}) }}">Supprimer</a></td>
                                        <td> <a href="{{ path('UpdateClub',{'nom':c.nom}) }}">Modifier</a></td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </section>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /col-lg-4 -->
            </div>

            <script>
                $(document).ready(function(){
                    $("#myInput").on("keyup", function() {
                        var value = $(this).val().toLowerCase();
                        $("#myTable tr").filter(function() {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script>
            {% endblock %}

