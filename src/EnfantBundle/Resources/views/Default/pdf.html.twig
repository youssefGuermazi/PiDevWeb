{% set i = 1 %}
<table border="1" id="t01">
    <tr><th>Id</th><th>Note_anglais</th><th>Note_francais</th><th>Note_info</th><th>Date</th><th>Evaluation</th></tr>
    {% for e in suivi %}

        <tr><td>{{i }}</td>
            <td>{{ e.noteAnglais }}</td>
            <td>{{ e.notefrancais }}</td>
            <td>{{ e.noteinfo }}</td>
            <td>{{ e.date|date('Y-m-d') }}</td>
            <td>{{ e.evaluation }}</td>
        </tr>
        {% set i = i+1 %}
    {% endfor %}
</table>