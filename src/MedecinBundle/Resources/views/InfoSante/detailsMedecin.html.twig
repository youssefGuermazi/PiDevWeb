{% extends '@Club/Default/layoutBack.html.twig' %}
{% block body %}

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">



<h3><i class="fa fa-angle-right"></i> Info-Medecin</h3>
<div class="row mb">
    <div class = "d-flex justification-content-center h-100">

    </div>
    <!-- page start-->

    <div class="content-panel">

        <div class="adv-table">
            <table id="myTable" cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" >

                <thead>
                <tr>
                    <th>CIN</th>
                    <th>NOM</th>
                    <th class="hidden-phone">PRENOM</th>
                    <th class="hidden-phone">SPECIALITE</th>
                    <th class="hidden-phone">IMAGE</th>

                </tr>

                </thead>

                <tbody id="myTable">

                    <tr class="gradeX">
                        <td>{{m.cin}}</td>
                        <td>{{m.nom}}</td>
                        <td class="hidden-phone">{{m.prenom}}</td>
                        <td class="center hidden-phone">{{m.specialite}}</td>
                        <td class="center hidden-phone"><img src="{{ asset('Upload/')}}{{ m.nomfile }}" width="100" class="img-circle" /></td>

                    </tr>





                </tbody>
            </table>
        </div>
    </div>
    <!-- page end-->
</div>




















<div class="content-panel">

    <div class="adv-table">
        <table id="myTable" cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" >

            <thead>







{% if info %}

    <tr>
    <td> Conseil-Santé </td>
    <td> Date Vaccin </td>
    <td>Action</td>
    </tr>
    </thead>

    <tbody id="myTable">
        {% for info in info %}
        <tr class="gradeX">
         <td> {{info.info}} </td>
            <td> {{info.datevaccin}} </td>
            <td><a href="{{ path('DeleteInfo',{'id':info.id}) }}"class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i>Supprimer</a>
                <a href="{{ path('Modifier_Info',{'id':info.id,'idc':m.cin}) }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i>Modifier</a>
            </td>
    {% endfor %}
        </tr>
    </tbody>

    </table>
    </div>
    </div>




        {% else %}

<section class="wrapper site-min-height">
    <h3><i class="fa fa-angle-right"></i> Ajouter Conseil</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="row mt">
                <div class="form-panel">
                    <div class="form">

        {{form_start (form)}}

                        <div class="form-group ">
                            <label for="cin" class="control-label col-lg-2">Conseil Santé:</label>
        {{form_widget (form.info, {'attr': {'class': 'form-control'}})}} <br>
                        </div>
                        <div class="form-group ">
                            <label for="nom" class="control-label col-lg-2">Date Vaccin:</label>
         {{form_widget (form.datevaccin, {'attr': {'class': 'col-lg-10'}})}} <br>
                        </div>
                        <div class="form-group ">
        <input type = "submit" value = "Ajouter" class = "btn btn-success" /> <br>
                        </div>
        {{form_end (form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    {% endif %}
{% endblock%}

